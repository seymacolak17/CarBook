@model List<ResultCarPricingWithModelDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-cart">
			<div class="container">
				<div class="row">
    			<div class="col-md-12 ftco-animate">
    				<div class="car-list">
	    				<table class="table">
						    <thead class="thead-primary">
						      <tr class="text-center">
						        <th>&nbsp;</th>
						        <th>&nbsp;</th>
						        <th class="bg-primary heading">Saatlik Kiralama </th>
								<th class="bg-dark heading">Günlük Kiralama </th>
								<th class="bg-black heading">Haftalık Kiralama </th>
								<th class="bg-black heading">Aylık Kiralama </th>
						      </tr>
						    </thead>
						    <tbody>
							@foreach (var item in Model)
							{
								<tr class="">
						      	<td class="car-image"><div class="img" style="background-image:url(@item.CoverImageUrl);"></div></td>
						        <td class="product-name">
									<h5>@item.brandName</h5>
						        	<h3>@item.model</h3>
@* 						        	<p class="mb-0 rated">
						        		<span>puan:</span>
						        		<span class="ion-ios-star"></span>
						        		<span class="ion-ios-star"></span>
						        		<span class="ion-ios-star"></span>
						        		<span class="ion-ios-star"></span>
						        		<span class="ion-ios-star"></span>
						        	</p> *@
						        </td>
						        
						        <td class="price">
						        	<p class="btn-custom"><a href="#">Aracı Kirala</a></p>
						        	<div class="price-rate">
							        	<h3>
							        		<span class="num"><small class="currency">₺</small> @item.hourlyAmount</span>
							        		<span class="per">/Saatlik</span>
							        	</h3>
						        	</div>
						        </td>
						        
						        <td class="price">
										<p class="btn-custom"><a href="#">Aracı Kirala</a></p>
						        	<div class="price-rate">
							        	<h3>
												<span class="num"><small class="currency">₺</small> @item.dailyAmount</span>
							        		<span class="per">/Günlük</span>
							        	</h3>
						        </div>
						        </td>

						        <td class="price">
										<p class="btn-custom"><a href="#">Aracı Kirala</a></p>
						        	<div class="price-rate">
							        	<h3>
												<span class="num"><small class="currency">₺</small> @item.weeklyAmount</span>
												<span class="per">/Haftalık</span>
							        	</h3>
							        </div>
						        </td>

								<td class="price">
										<p class="btn-custom"><a href="#">Aracı Kirala</a></p>
									<div class="price-rate">
										<h3>
											<span class="num"><small class="currency">₺</small> @item.monthlyAmount</span>
												<span class="per">/Aylık</span>
										</h3>
									</div>
								</td>
						      </tr>
							}
							

						    </tbody>
						  </table>
					  </div>
    			</div>
    		</div>
			</div>
		</section>

