@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Marka Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili marka listesi, markalar üzerinde düzenleme ve bir markayı silme gibi işlemlerinizi bu sayfa üzerinden gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka Adı</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Markaya Ait Araçlar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.name</td>
                                            <td><a href="/AdminBrand/RemoveBrand/@item.brandId" class="btn btn-outline-danger btn-rounded">Sil</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.brandId" class="btn btn-outline-success btn-rounded">Güncelle</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@item.brandId" class="btn btn-outline-secondary btn-rounded">Markaya Ait Araçlar</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <td><a href="/AdminBrand/CreateBrand/" class="btn btn-outline-primary btn-rounded">Yeni Marka Girişi</a></td>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



