@model List<ResultAllBlogsWithAuthorDto>


<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son Bloglar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Yzarlarımızın Blogları
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <thead>
                        <tr>
                            <th>Blog Başlığı</th>
                            <th>Yazar</th>
                            <th>Blogu Aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5>
                                </td>
                                <td>
                                    <h5 class="font-size-17 mb-1 font-weight-normal">@item.AuthorName</h5>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        <a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-primary">Blogu Aç</a>
                                    </h5>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div> 
    </div> 
</div>