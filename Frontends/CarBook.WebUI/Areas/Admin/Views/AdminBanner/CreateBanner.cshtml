@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Banner alanına veri girişini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olmaması için yeni bir banner girişi yaptıktan sonra önceki banner alanını silin. Sadece 1 adet banner verisi kalmalıdır.</p>
                        <form method="post">
                            <div class="form-group">
                                <label for="title">Başlık</label>
                                <input type="text" class="form-control" id="title" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" asp-for="Description" >
                            </div>
                            <div class="form-group">
                                <label for="VideoDescription">Video Açıklaması</label>
                                <input type="text" class="form-control" id="VideoDescription" asp-for="VideoDescription" >
                            </div>
                            <div class="form-group">
                                <label for="VideoUrl">Video URL</label>
                                <input type="text" class="form-control" id="VideoUrl" asp-for="VideoUrl" >
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

