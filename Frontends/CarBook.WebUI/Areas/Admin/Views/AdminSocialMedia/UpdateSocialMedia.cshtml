@model UpdateSocialMediaDto

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sosyal Medya Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Kullandığınız sosyal medya hesaplarına ait bilgileri yönetebileceğiniz sayfadır. İkonlarla ilgili listeye ikon listesi üzerinden erişebilirsiniz.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="SocialMediaID" />
                            <div class="form-group">
                                <label for="Name">Sosyal Medya Başlığı</label>
                                <input type="text" class="form-control" id="Name" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="Url">Sosyal Medya URL</label>
                                <input type="text" class="form-control" id="Url" asp-for="Url">
                            </div>
                            <div class="form-group">
                                <label for="Icon">Sosyal Medya İkonu</label>
                                <input type="text" class="form-control" id="Icon" asp-for="Icon">
                            </div>
                            <button type="submit" class="btn btn-outline-primary waves-effect waves-light">Sosyal Medya Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>










