@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Yazar Bilgisi Güncelleme</h4>
                        <p class="card-subtitle mb-4">Yazar alanına veri girişini aşağıdaki panelden yapabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="AuthorID" />
                            <div class="form-group">
                                <label for="Name">Ad Soyad</label>
                                <input type="text" class="form-control" id="Name" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" id="Description" asp-for="Description">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Yazar Görsel</label>
                                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





