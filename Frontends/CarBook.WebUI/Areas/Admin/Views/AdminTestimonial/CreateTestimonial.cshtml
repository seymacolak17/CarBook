@model CreateTestimonialDto

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Referans ekleme işleminin yapıldığı sayfadır. Bilgileri eksiksiz olarak girmeye özen gösteriniz.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="Name">Referans Ad Soyad</label>
                                <input type="text" class="form-control" id="Name" asp-for="Name">
                            </div>
                            <div class="form-group">
                                <label for="Title">Referans Unvanı</label>
                                <input type="text" class="form-control" id="Title" asp-for="Title">
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Referans Görsel</label>
                                <input type="text" class="form-control" id="ImageUrl" asp-for="ImageUrl">
                            </div>
                            <div class="form-group">
                                <label for="Comment">Referans Yorumu</label>
                                <textarea rows="5" class="form-control" id="Comment" asp-for="Comment"></textarea>
                            </div>
                            <button type="submit" class="btn btn-outline-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

